{% extends '@TeebbCore/types/base_container.html.twig' %}

{% block content %}
    <!-- FULL WIDTH Content -->
    <div class="full-width-wrapper">
        <!-- 添加类型 -->
        <div class="card shadow mb-4">

            {% include '@TeebbCore/common/card_title.html.twig' with _context %}

            <div class="card-body">
                <div class="table-responsive mt-3">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th class="text-nowrap">内容类型</th>
                            <th class="d-none d-md-table-cell">描述</th>
                            <th class="text-nowrap">操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in data %}
                            <tr>
                                <td class="text-nowrap"><a href="#">{{ item.label }}</a></td>
                                <td class="d-none d-md-table-cell">{{ item.description }}</td>

                                <td class="text-nowrap">
                                    {% block item_actions %}
                                        <div class="btn-group btn-group-sm" role="group" aria-label="内容类型操作按钮组">
                                            <a href="edit-content-type.html" class="btn btn-primary text-white">编辑</a>
                                            <a href="delete-content-type.html" class="btn btn-danger text-white">删除</a>

                                            <div class="btn-group btn-group-sm" role="group">
                                                <button id="btnGroupDrop_{{ item.id }}" type="button"
                                                        class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                    管理字段
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop_{{ item.id }}">
                                                    <a class="dropdown-item"
                                                       href="manage-content-type-field.html">管理字段</a>
                                                    <a class="dropdown-item" href="manage-content-field-form-show.html">管理字段显示</a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endblock %}
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    </div>
{% endblock %}
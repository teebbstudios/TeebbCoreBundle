{% extends '@TeebbCore/types/base_types.html.twig' %}

{% block card_help %}
    <!-- 提示 -->
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="fas fa-info-circle"></i>
        <span class="small text-muted">
            {% block top_help_message %}
                {{ ['teebb.core.help.', entity_type.EntityTypeMetadata.bundle]|join|trans }}
            {% endblock %}
        </span>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{% endblock %}

{% block card_title %}
    {% if action == 'update' %}
        {% include '@TeebbCore/tab_card_title.html.twig' %}
    {% else %}
        {% include '@TeebbCore/types/common/card_title.html.twig' with _context %}
    {% endif %}
{% endblock %}

{% block card_body %}
    <div class="{{ action }}-{{ entity_type.EntityTypeMetadata.bundle }}-form">
        {{ form_start(form) }}
        {{ form_row(form.label) }}
        {{ form_row(form.bundle) }}
        {{ form_row(form.typeAlias) }}
        {{ form_row(form.description) }}
        <div class="form-inline mt-4">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
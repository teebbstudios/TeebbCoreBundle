{% extends '@TeebbCore/types/base_types.html.twig' %}


{% block card_body %}
    <div class="table-responsive mt-3">
        <table class="table table-striped">
            <thead>
            <tr>
                <th class="text-nowrap">{{ 'teebb.core.list.name'|trans }}</th>
                <th class="d-none d-md-table-cell">{{ 'teebb.core.list.description'|trans }}</th>
                <th class="text-nowrap">{{ 'teebb.core.list.options'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for item in data %}
                <tr>
                    <td class="text-nowrap"><a href="#">{{ item.label }}</a></td>
                    <td class="d-none d-md-table-cell">{{ item.description }}</td>

                    <td class="text-nowrap">
                        {% block item_actions %}
                            {% include '@TeebbCore/types/buttons/item_manage_types_button.html.twig' with _context %}
                        {% endblock %}
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
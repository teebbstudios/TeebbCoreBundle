<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            {% block block_label %}
            {{ settings.label|trans }}
            {% endblock %}
        </h6>
    </div>
    <div class="card-body">
        {% block block_content %}
            {{ content|trans|raw }}
        {% endblock %}
    </div>
</div>
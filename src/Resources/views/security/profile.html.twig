{% extends '@TeebbCore/standard_layout.html.twig' %}

{% block title %} {{ system.siteName }} - {{ 'Profile'|trans }} {% endblock %}

{% block body_attr %}class="bg-gradient-primary"{% endblock %}

{% block page_wrapper %}
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">{{ 'Edit your profile'|trans }}</h1>
                                        <p class="mb-4">{{ 'Edit profile'|trans({'%username%': user.username}) }}</p>
                                    </div>
                                    {% include '@TeebbCore/flash_messages.html.twig' %}

                                    {{ form(profile_form) }}

                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="{{ path('teebb_user_logout') }}">{{ 'logout'|trans }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
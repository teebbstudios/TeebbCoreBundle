{% extends '@TeebbCore/standard_layout.html.twig' %}

{% block title %} Todo: 修改这里 teebb login {% endblock %}

{% block body_attr %}class="bg-gradient-primary"{% endblock %}

{% block page_wrapper %}
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">{{ 'Welcome Back'|trans }}</h1>
                                    </div>
                                    {{ form_start(login_form) }}
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="mb-3">
                                            {{ 'logged'|trans({'%username%': app.user.username }) }}
                                            <a href="{{ path('teebb_user_logout') }}">{{ 'logout'|trans }}</a>
                                        </div>
                                    {% else %}
                                        {{ form_end(login_form) }}
                                    {% endif %}
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">{{ 'Forgot Password?'|trans }}</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="{{path('teebb_user_login')}}">{{ 'Already have an account? Login!'|trans }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
{% endblock %}
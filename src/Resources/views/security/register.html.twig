{% extends '@TeebbCore/standard_layout.html.twig' %}

{% block title %} Todo: 修改这里 teebb register {% endblock %}

{% block body_attr %}class="bg-gradient-primary"{% endblock %}

{% block page_wrapper %}
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">{{ 'Create an Account!'|trans }}</h1>
                            </div>

                            {% include '@TeebbCore/flash_messages.html.twig' %}

                            {{ form_start(register_form) }}
                            {{ form_row(register_form.username) }}
                            {{ form_row(register_form.email) }}
                            <div class="form-group row">
                                {{ form_row(register_form.firstName) }}
                                {{ form_row(register_form.lastName) }}
                            </div>
                            {{ form_end(register_form) }}
                            <hr>
                            <div class="text-center">
                                <a class="small" href="{{ path('teebb_user_resetting_request') }}">{{ 'Forgot Password?'|trans }}</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="{{path('teebb_user_login')}}">{{ 'Already have an account? Login!'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
<div class="form-row">
    <div class="col-12">
        {% if action != 'delete_term' %}
            <button class="btn btn-primary btn-sm btn-icon-split">
                <span class="icon text-white-50"><i class="fas fa-arrow-right"></i></span>
                <span class="text">
                    {% if action=='create_term' %}
                        {{ 'teebb.core.form.create_term'|trans }}
                    {% else %}
                        {{ 'teebb.core.form.update_term'|trans }}
                    {% endif %}
                </span>
            </button>
        {% else %}
            <button class="btn btn-danger btn-sm btn-icon-split">
                <span class="icon text-white-50"><i class="fas fa-trash"></i></span>
                <span class="text">{{ 'teebb.core.form.delete_term'|trans }}</span>
            </button>
        {% endif %}
    </div>
</div>